<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ProgressBar?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="dev.dreiling.videodl.MainController"
      alignment="CENTER" spacing="10" prefWidth="480" prefHeight="260" styleClass="background">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <Label text="Enter YouTube Video URL:" styleClass="block, text, header"/>
    <TextField fx:id="urlField" promptText="Video URL" prefWidth="440" styleClass="block"/>

    <HBox alignment="CENTER" spacing="10" prefWidth="440">
        <Button fx:id="directoryButton" text="Output Directory" onAction="#handleOutput" prefWidth="220" styleClass="block"/>
        <Label fx:id="directoryLabel" text="" prefWidth="220" styleClass="block, text"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10" prefWidth="440">
        <ComboBox fx:id="qualitySelector" promptText="Select Quality" prefWidth="220" styleClass="block">
        </ComboBox>
        <Button fx:id="downloadButton" text="Download Video" onAction="#handleDownload" prefWidth="220" styleClass="block"/>
    </HBox>

    <ProgressBar fx:id="progressBar" prefWidth="440" prefHeight="36" progress="0.0" styleClass="progressbar"/>

    <Label fx:id="progressLabel" text="Waiting..." styleClass="block, subtext"/>
</VBox>
